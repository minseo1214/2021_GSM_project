<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentReservation"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/white_bar2"
        android:elevation="15dp"
        android:layout_marginTop="-5dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_full_arrow"/>

        <Spinner
            android:id="@+id/spinner_start_point"
            android:layout_width="310dp"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="-60dp"
            android:spinnerMode="dropdown"
            android:paddingStart="10dp"
            android:background="@drawable/bg_spinner_station"/>

        <Spinner
            android:id="@+id/spinner_arrival_point"
            android:layout_width="310dp"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:spinnerMode="dropdown"
            android:paddingStart="10dp"
            android:background="@drawable/bg_spinner_station"/>

    </LinearLayout>

<!--    <com.github.chrisbanes.photoview.PhotoView-->
<!--        android:id="@+id/map"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/white_bottom_bar"
        android:elevation="50dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            android:background="@color/white"
            android:fontFamily="@font/scd4_regular"
            android:text="@string/estimate_time"
            android:textColor="@color/base"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/estimate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="45dp"
            android:background="@color/white"
            android:fontFamily="@font/scd7_extra_bold"
            android:text="@{activity::estimatetime}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:background="@color/white"
            android:fontFamily="@font/scd4_regular"
            android:text="@string/receive_time"
            android:textColor="@color/base"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="80dp"
            android:background="@color/white"
            android:fontFamily="@font/scd7_extra_bold"
            android:text="@{activity::receivetime}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_reservation"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_button"
            android:fontFamily="@font/scd7_extra_bold"
            android:gravity="center"
            android:onClick="@{activity::reservation}"
            android:text="@string/reserve"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            android:textStyle="normal" />

    </RelativeLayout>

</FrameLayout>

